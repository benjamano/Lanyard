@page "/"

<PageTitle>Play2Day - Family Fun & Laser Tag</PageTitle>

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-content">
        <h1 class="hero-title">Welcome to Play2Day</h1>
        <p class="hero-subtitle">The Ultimate Laser Tag & Family Entertainment Experience</p>
        <div class="hero-buttons">
            <a href="/book" class="btn-primary">Book Now</a>
            <a href="/about" class="btn-secondary">Learn More</a>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section">
    <div class="container">
        <h2 class="section-title">Why Choose Play2Day?</h2>
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">
                    @* <FluentIcon Value="@(new Icons.Regular.Size48.Games())" Color="Color.Custom" CustomColor="#f91836" /> *@
                </div>
                <h3 class="feature-title">Laser Tag Arena</h3>
                <p class="feature-description">State-of-the-art laser tag equipment in our multi-level arena designed for maximum fun and excitement.</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon">
                    @* <FluentIcon Value="@(new Icons.Regular.Size48.People())" Color="Color.Custom" CustomColor="#f91836" /> *@
                </div>
                <h3 class="feature-title">Party Packages</h3>
                <p class="feature-description">Perfect for birthdays, team building, and group events. Customizable packages to suit your needs.</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon">
                    @* <FluentIcon Value="@(new Icons.Regular.Size48.Food())" Color="Color.Custom" CustomColor="#f91836" /> *@
                </div>
                <h3 class="feature-title">Café & Refreshments</h3>
                <p class="feature-description">Enjoy delicious snacks, meals, and beverages in our comfortable café area.</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon">
                    @* <FluentIcon Value="@(new Icons.Regular.Size48.Trophy())" Color="Color.Custom" CustomColor="#f91836" /> *@
                </div>
                <h3 class="feature-title">Tournaments & Events</h3>
                <p class="feature-description">Join our regular tournaments and special events for a chance to win prizes and glory!</p>
            </div>
        </div>
    </div>
</section>

<!-- Pricing Section -->
<section class="pricing-section">
    <div class="container">
        <h2 class="section-title">Our Packages</h2>
        <div class="pricing-grid">
            <div class="pricing-card">
                <div class="pricing-header">
                    <h3 class="pricing-title">Individual</h3>
                    <div class="pricing-price">
                        <span class="price-amount">£12</span>
                        <span class="price-period">per person</span>
                    </div>
                </div>
                <ul class="pricing-features">
                    <li>2 Laser Tag Games</li>
                    <li>Free Locker</li>
                    <li>Soft Drink Included</li>
                    <li>Score Tracking</li>
                </ul>
                <a href="/book" class="pricing-button">Book Now</a>
            </div>

            <div class="pricing-card featured">
                <div class="pricing-badge">Most Popular</div>
                <div class="pricing-header">
                    <h3 class="pricing-title">Birthday Party</h3>
                    <div class="pricing-price">
                        <span class="price-amount">£180</span>
                        <span class="price-period">up to 10 kids</span>
                    </div>
                </div>
                <ul class="pricing-features">
                    <li>3 Laser Tag Games</li>
                    <li>Private Party Room (2 hours)</li>
                    <li>Food & Drinks Included</li>
                    <li>Dedicated Party Host</li>
                    <li>Birthday Cake Setup</li>
                    <li>Party Invitations</li>
                </ul>
                <a href="/book" class="pricing-button">Book Now</a>
            </div>

            <div class="pricing-card">
                <div class="pricing-header">
                    <h3 class="pricing-title">Group Package</h3>
                    <div class="pricing-price">
                        <span class="price-amount">£10</span>
                        <span class="price-period">per person</span>
                    </div>
                </div>
                <ul class="pricing-features">
                    <li>3 Laser Tag Games</li>
                    <li>Minimum 15 People</li>
                    <li>Reserved Area</li>
                    <li>Team Building Options</li>
                    <li>Group Photos</li>
                </ul>
                <a href="/book" class="pricing-button">Book Now</a>
            </div>
        </div>
    </div>
</section>

