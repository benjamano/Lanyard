@page "/staff/rota/clockin"

@using Lanyard.App.Components.ClockIn
@using Lanyard.Application.Services.Authentication
@using Lanyard.Infrastructure.Models

<PageTitle>Clock In</PageTitle>
<div class="d-flex flex-column mt-5 p-4 align-items-center">
    <ClockInButton></ClockInButton>
    <div class="mt-5 col-8 mx-auto row justify-content-evenly">
        <div class="card col-5 g-0">
            <div class="card-header bg-primary-subtle">
                Previous Shifts
            </div>
            <div class="card-body p-0">
                <div class="d-flex justify-content-between align-items-center row h-100">
                    <PreviousShiftsTable></PreviousShiftsTable>
