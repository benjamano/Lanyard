@page "/clockin"

@using LanyardData.Models
@using LanyardApp.Components.ClockIn
@inject ToastService ToastService

<PageTitle>Clock In</PageTitle>
<div class="d-flex flex-column mt-5 p-4 align-items-center">
    <ClockInButton></ClockInButton>
    <div class="mt-5 col-8 mx-auto row justify-content-evenly">
        <div class="card col-5">
            <div class="card-header bg-primary-subtle">
                Previous Shifts
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center row">
                    <PreviousShiftsTable></PreviousShiftsTable>
                </div>
            </div>
        </div>
        <div class="card col-5">
            <div class="card-header bg-primary-subtle">
                Upcoming Shifts
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center row">
                    <UpcomingShiftsTable></UpcomingShiftsTable>
                </div>
            </div>
        </div>
    </div>
</div>