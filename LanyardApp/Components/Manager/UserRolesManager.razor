@using System.Threading.Tasks
@inject ApplicationRolesService _rApi;

<PageTitle>User Roles</PageTitle>

<div class="card">
    <div class="card-header">User Roles Manager</div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <div class="form-floating">
                    @if (userProfiles is not null && userProfiles.Any())
                    {
                        <InputSelect id="userSelect" class="form-select" @bind-Value="selectedUserId" @onchange="LoadUsersRoles">
                            <option value="">Select a User...</option>
                            @foreach (var user in userProfiles)
                            {
                                <option value="@user.Id">@user.GetName()</option>
                            }
                        </InputSelect>
                    }
                    else
                    {
                        <select class="form-select" disabled>
                            <option>Loading...</option>
                        </select>
                    }
                    <label for="userSelect" class="form-label">Select User</label>
                </div>
            </div>
            <div class="col-md-4">
                @if (selectedUserId != string.Empty && selectedUserId != null)
                {
                    <div class="card">
                        <div class="card-header">Assigned Roles</div>
                        <div class="card-body p-0">
                            <table class="table table-striped table-hover w-100 h-100 small">
                                <thead>
                                    <tr>
                                        <td class="col-4">Role</td>
                                        @* <td class="col-3">Date Added</td>
                                        <td class="col-3">Added By</td> *@
                                        <td class="col-2">Actions</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (userRoles.Count() == 0)
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center">No Roles Exist for this User</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        @foreach (ApplicationUserRole role in userRoles) {
                                            <tr>
                                                <td class="col-4">@role.Role!.Name</td>
                                                @* <td class="col-3">@role.CreateDate.ToString("g")</td>
                                                <td class="col-3">@role.CreateByUser!.GetName()</td> *@
                                                <td>
                                                    <div class="d-flex flex-row">
                                                        <span role="button" class="fas fa-trash text-danger"></span>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            </div>

            <div class="col-md-4">
                @if (selectedUserId != string.Empty && selectedUserId != null)
                {
                    <div class="card">
                        <div class="card-header">Assign New Roles</div>
                        <div class="card-body p-0">
                            <table class="table table-striped table-hover w-100 h-100 small">
                                <thead>
                                    <tr>
                                        @* <td class="col-1">Id</td> *@
                                        <td class="col-3">Name</td>
                                        <td class="col-2">Created By</td>
                                        <td class="col-2">Created Date</td>
                                        <td class="col-2">Actions</td>
                                    </tr>
                                </thead>
                                <tbody>
                                @if (roles is not null)
                                {
                                    if (roles.Count() == 0)
                                    {
                                        <tr>
                                            <td colspan="5" class="text-center text-muted">
                                                No Roles Exist Yet
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        @foreach (ApplicationRole role in roles.Where(x => !userRoles.Select(x=> x.RoleId).Contains(x.Id)))
                                        {
                                            <tr>
                                                @* <td class="col-1">@role.Id</td> *@
                                                <td class="col-3">@role.Name</td>
                                                <td class="col-2">@role.CreatedByUser!.GetName()</td>
                                                <td class="col-2">@role.CreateDate.ToString("g")</td>
                                                <td class="col-2">
                                                    <div class="d-flex flex-row">
                                                        <span role="button" class="fas fa-plus-circle text-success"></span>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">
                                            <span class="fas fa-spinner fa-spin me-0 bg-transparent"></span>
                                            Loading...
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private IEnumerable<UserProfile> userProfiles = Array.Empty<UserProfile>();
    private string? selectedUserId = null;

    private IEnumerable<ApplicationRole> roles = Array.Empty<ApplicationRole>();
    private IEnumerable<ApplicationUserRole> userRoles = Array.Empty<ApplicationUserRole>();

    protected override async Task OnInitializedAsync()
    {
        userProfiles = await _sec.GetAllUsersAsync();
        roles = await _rApi.GetAllApplicationRolesAsync();
    }

    private string GetSelectedUserName()
    {
        return userProfiles.FirstOrDefault(u => u.Id == selectedUserId)?.GetName() ?? string.Empty;
    }

    private async Task LoadUsersRoles()
    {
        userRoles = await _rApi.GetUserRolesAsync(selectedUserId!);
    }
}